# Core Settings
NODE_ENV=production
PORT=3500
SERVICE_NAME=mysecondbrain.info-BE
LOG_LEVEL=info
ENABLE_CRON_JOBS=true

# Authentication
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
ARCJET_KEY=your_arcjet_key_here

# Database Settings
# DB_URI will be set in docker-compose
# Note: Database auth is disabled for MVP deployment
# MYSQL_USER=mysecondbrain_user
# MYSQL_PASSWORD=your_secure_mysql_password
# MYSQL_ROOT_PASSWORD=your_secure_mysql_root_password

# Redis Settings
# REDIS_URL will be set in docker-compose
# Note: Redis auth is disabled for MVP deployment
# REDIS_PASSWORD=your_secure_redis_password
USE_REDIS=true

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=app@mysecondbrain.info
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM='MySecondBrain.info <app@mysecondbrain.info>'
SEND_EMAILS=true

# AWS Settings
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET_NAME=mysecondbrain.info

# OpenAI Settings
OPENAI_API_KEY=your_openai_api_key
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_CHAT_MODEL=gpt-4o-mini

# Weaviate Settings
# Note: Weaviate auth is disabled for MVP deployment
# WEAVIATE_API_KEY=weaviate-api-key-secure-random-string
# WEAVIATE_HOST and WEAVIATE_SCHEME will be set in docker-compose

# Docker Settings
DOCKERHUB_USERNAME=your_dockerhub_username

# Admin Settings
ADMIN_PASS=your_admin_password 